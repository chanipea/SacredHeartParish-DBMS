  background: #fff;
  padding: 20px;
  border-radius: 10px;
  width: 320px;
  text-align: center;
  box-shadow: 0px 4px 10px rgba(0,0,0,0.3);
  position: relative;
}

#successModal .close {
  position: absolute;
  top: 8px;
  right: 12px;
  font-size: 18px;
  cursor: pointer;
}

